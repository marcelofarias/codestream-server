//   OnPrem configuration for local development (on localhost)
//
//   ****  DO NOT EDIT THIS FILE - YOUR CHANGES WILL BE OVERWRITTEN   ****
//
//   Copy this template file to a new file in the same directory and complete it.
//   Use a symbolic link (~/.codestream/config/codestream-services-config.json)
//   to make one of the configs active for use with the default sandbox
//   configuration.
//
//   - Profile:        onprem-development.json
//   - Storage:        mongo
//   - Broadcast:      broadcaster
//   - Queuing:        rabbitMQ via docker
//         mac:             docker run -d -P --name csrabbitmq teamcodestream/rabbitmq-onprem:0.0.0
//         remote-linux:    docker run -d -P --network="host" --name csrabbitmq teamcodestream/rabbitmq-onprem:0.0.0
//   - Outbound mail:  NodeMailer/smtp (via your codestream gmail account)

{
	"apiServer": {
		"local": {
			"dontWantAWS": true
		},
		"defaultEnv": {}
	},
	"broadcastEngine": {
		"codestreamBroadcaster": {
			"local": {
				"assetEnvironment": "local",
				"runTimeEnvironment": "local",
				"secrets": {
					"_loadSecretsFile": "codestream/local-bcast-secrets.cfg"
				},
				"logger": {
					"directory": "${CS_BROADCASTER_SANDBOX}/log"
				}
			},
			"defaultEnv": {}
		}
	},
	"email": {
		"local": {},
		"defaultEnv": {}
	},
	"emailDeliveryService": {
		"local": {
			"NodeMailer": {
				"service": "gmail",
				"host": "smtp.gmail.com",
				"port": 587,
				"username": "${DT_USER}@codestream.com",
				"password": "{{GMAIL_ACCOUNT_PASSWORD_PLAIN_TEXT}}"
			}
		},
		"defaultEnv": {}
	},
	"inboundEmailServer": {
		"local": {},
		"defaultEnv": {}
	},
	"integrations": {
		"asana": {
			"asana.com": {
				"defaultEnv": {
					"_loadSecretsFile": "asana/dev.cfg"
				},
				"prod": {
					"_loadSecretsFile": "asana/prod.cfg"
				}
			}
		},
		"bitbucket": {
			"bitbucket.com": {
				"defaultEnv": {
					"_loadSecretsFile": "bitbucket/dev.cfg"
				},
				"prod": {
					"_loadSecretsFile": "bitbucket/prod.cfg"
				}
			}
		},
		"devops": {
			"microsoft.com": {
				"defaultEnv": {
					"_loadSecretsFile": "microsoft/devops-dev.cfg"
				},
				"prod": {
					"_loadSecretsFile": "microsoft/devops-prod.cfg"
				}
			}
		},
		"github": {
			"github.com": {
				"defaultEnv": {
					"_loadSecretsFile": "github/dev.cfg"
				},
				"prod": {
					"_loadSecretsFile": "github/prod.cfg"
				}
			}
		},
		"gitlab": {
			"gitlab.com": {
				"defaultEnv": {
					"_loadSecretsFile": "gitlab/dev.cfg"
				},
				"prod": {
					"_loadSecretsFile": "gitlab/prod.cfg"
				}
			}
		},
		"jira": {
			"atlassian.net": {
				"defaultEnv": {
					"_loadSecretsFile": "atlassian/dev.cfg"
				},
				"prod": {
					"_loadSecretsFile": "atlassian/prod.cfg"
				}
			}
		},
		"msteams": {
			"microsoft.com": {
				"defaultEnv": {
					"_loadSecretsFile": "microsoft/teams-dev.cfg"
				},
				"prod": {
					"_loadSecretsFile": "microsoft/teams-prod.cfg"
				}
			}
		},
		"slack": {
			"slack.com": {
				"defaultEnv": {
					"_loadSecretsFile": "slack/dev-combined.cfg"
				},
				"prod": {
					"_loadSecretsFile": "slack/prod-combined.cfg"
				}
			}
		},
		"trello": {
			"trello.com": {
				"defaultEnv": {
					"_loadSecretsFile": "trello/codestreamops.cfg"
				}
			}
		},
		"youtrack": {
			"jetbrains.com": {
				"defaultEnv": {}
			}
		}
	},
	"outboundEmailServer": {
		"local": {},
		"defaultEnv": {}
	},
	"queuingEngine": {
		"local": {
			"rabbitmq": {}
		},
		"defaultEnv": {
			"awsSQS": {}
		}
	},
	"sharedSecrets": {
		"local": {
			"_loadSecretsFile": "codestream/local-secrets.cfg"
		},
		"defaultEnv": {
			"_loadSecretsFile": "codestream/dev-secrets.cfg"
		}
	},
	"ssl": {
		"defaultEnv": {
			"cafile": "/etc/pki/wildcard.codestream.us/wildcard.codestream.us-ca",
			"certfile": "/etc/pki/wildcard.codestream.us/wildcard.codestream.us-crt",
			"keyfile": "/etc/pki/wildcard.codestream.us/wildcard.codestream.us-key"
		},
		"local": {},
		"prod": {
			"cafile": "/etc/pki/wildcard.codestream.com/wildcard.codestream.com-ca",
			"certfile": "/etc/pki/wildcard.codestream.com/wildcard.codestream.com-crt",
			"keyfile": "/etc/pki/wildcard.codestream.com/wildcard.codestream.com-key"
		}
	},
	"storage": {
		"mongo": {
			"defaultEnv": {}
		}
	},
	"telemetry": {
		"intercom": {
			"defaultEnv": {
				"_loadSecretsFile": "intercom/dev.cfg"
			}
		},
		"segment": {
			"defaultEnv": {
				"_loadSecretsFile": "segment/dev-api.cfg"
			}
		}
	}
}
