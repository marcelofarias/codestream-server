//   OnPrem overlay files merged into existing config files
//
//   ****  DO NOT EDIT THIS FILE - YOUR CHANGES WILL BE OVERWRITTEN   ****
//
//   - Profile:        onprem-overlays.json
//   - Outbound mail:  NodeMailer/smtp via mail-relay.codestream.us
//
//   environments:
//        default:  development integrations (used for spin-up-development)
//        oppr:     development integrations + slack + msteams
//        opbeta:   development integrations + slack + msteams
//        avs:      integrations specific to AcmeVideoServices test env

{
	"emailDeliveryService": {
		"NodeMailer": {
			"host": "mail-relay.codestream.us",
			"port": 25,
			"secure": false
		}
	},
	"integrations": {
		"asana": {
			"cloud": {
				"defaultEnv": {
					"_loadSecretsFile": "asana/dev.cfg"
				}
			}
		},
		"bitbucket": {
			"cloud": {
				"defaultEnv": {
					"_loadSecretsFile": "bitbucket/dev.cfg"
				},
				"opbeta": {
					"_loadSecretsFile": "bitbucket/opbeta.cfg"
				},
				"oppr": {
					"_loadSecretsFile": "bitbucket/oppr.cfg"
				}
			}
		},
		"devops": {
			"cloud": {
				"defaultEnv": {
					"_loadSecretsFile": "microsoft/devops-dev.cfg"
				},
				"opbeta": {
					"_loadSecretsFile": "microsoft/devops-opbeta.cfg"
				},
				"oppr": {
					"_loadSecretsFile": "microsoft/devops-oppr.cfg"
				}
			}
		},
		"github": {
			"cloud": {
				"defaultEnv": {
					"_loadSecretsFile": "github/dev.cfg"
				},
				"opbeta": {
					"_loadSecretsFile": "github/opbeta.cfg"
				},
				"oppr": {
					"_loadSecretsFile": "github/oppr.cfg"
				}
			}
		},
		"gitlab": {
			"cloud": {
				"defaultEnv": {
					"_loadSecretsFile": "gitlab/dev.cfg"
				}
			}
		},
		"jira": {
			"cloud": {
				"defaultEnv": {
					"_loadSecretsFile": "atlassian/dev.cfg"
				},
				"opbeta": {
					"_loadSecretsFile": "atlassian/opbeta.cfg"
				},
				"oppr": {
					"_loadSecretsFile": "atlassian/oppr.cfg"
				}
			}
		},
		"msteams": {
			"cloud": {
				"avs": {
					"_loadSecretsFile": "microsoft/teams-avs.cfg"
				},
				"defaultEnv": {}
			}
		},
		"okta": {
			"localInstallation": {
				"defaultEnv": {
					"_loadSecretsFile": "okta/dev.cfg"
				}
			}
		},
		"slack": {
			"cloud": {
				"defaultEnv": {},
				"opbeta": {
					"_loadSecretsFile": "slack/opbeta-combined.cfg",
					"interactiveComponentsEnabled": true
				},
				"oppr": {
					"_loadSecretsFile": "slack/oppr-combined.cfg",
					"interactiveComponentsEnabled": true
				}
			}
		},
		"trello": {
			"cloud": {
				"defaultEnv": {
					"_loadSecretsFile": "trello/codestreamops.cfg"
				}
			}
		}
	},
	"ssl": {
		"cafile": "/opt/config/wildcard.codestream.us-ca",
		"certfile": "/opt/config/wildcard.codestream.us-crt",
		"keyfile": "/opt/config/wildcard.codestream.us-key"
	}
}
